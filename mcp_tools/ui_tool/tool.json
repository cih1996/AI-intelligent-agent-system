{
  "tools": [
    {
      "name": "ui.render",
      "description": "构建 UI 面板，用于展示任务进度、数据、列表等",
      "input_schema": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["panel", "table", "chart", "form"],
            "description": "UI 类型"
          },
          "title": {
            "type": "string",
            "description": "面板标题"
          },
          "sections": {
            "type": "array",
            "items": {"type": "object"},
            "description": "面板区块列表"
          },
          "data": {
            "type": "object",
            "description": "数据"
          },
          "config": {
            "type": "object",
            "description": "配置选项"
          }
        },
        "required": ["type"]
      }
    }
  ]
}

